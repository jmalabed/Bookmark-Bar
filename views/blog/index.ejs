</nav>
<!-- Create Link -->
<div>
  <ul class='nav nav-pills'>
    <li class='nav-item'><a class='nav-link' href='/blog/new'>create</a></li>
  </ul>
</div>
<!-- MAIN CONTENT -->
<section class='position-relative'>
  <!-- NOTES ADD -->
  <div class='container' data-sticky-container>
    <div class='row'>
      <!-- MAIN POST Start: -->
      <!-- col large max container width set at 960px -->
      <div class='col-lg-9'>
        <!-- Title -->
        <!-- margin bottom set to 1.5rem (24px if font size is 16px)-->
        <div class='mb-4'>
        <!-- margin set at 0 -->
        <h2 class='m-0'> Today's highlights</h2>
        </div>
        <!-- https://getbootstrap.com/docs/5.0/layout/gutters/ -->
        <!-- https://getbootstrap.com/docs/5.0/utilities/spacing/ -->
        <!-- https://stackoverflow.com/questions/48971732/unable-to-undertstand-usage-of-spacer-in-bootstrap-4/51320503 -->
        <!-- gutters are padding between your columns, used to responsively space and align content in the Bootstrap grid system.  -->
        <!-- vertical gutters width set at $spacer * 1.5 -->
        <!--  $spacer is s sass variable. value set at 16px -->
        <div class ='row gy-4'>
          <!-- CARD ITEMs START: -->
          <!-- Responsive to small devices - screen width equal to or greater than 576px  -->
          <div class ='col-sm-6'
            <div class='card'> <% blogs.forEach(blog => { %>
              <!-- CARD img -->
              <div class ='position-relative'>
                <img class='card-img' src='https://images.unsplash.com/photo-1493612276216-ee3925520721?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8cmFuZG9tfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&w=1000&q=80' alt='Card Image'/>
                  <!-- CARD body -->
                  <!-- padded section within a card: padding-horizontal at 0 & padding-top set at 1.0rem  -->
                <div class='card-body px-0 pt-3'>
                  <!-- no underline link.. font weight-bold -->
                  <h4><a href='/blog/<%= blog._id %>' class='text-decoration-none btn-link fw-bold'> <%= blog.header %> </a></h4>
                  <form action="/blog/<%=blog._id%>/like?_method=PUT" method="post">
                    <input type="hidden" name="likes" value="<%=blog.likes%>">
                    <input type="submit" id='like-btn' value="Like"> : <%=blog.likes%>
                  </form>
                  <p class='card-text'> <%= blog.description %> </p>
                  <!-- CARD info -->
                  <blockquote class='blockquote text-right'>
                    <footer class='blockquote-footer'> yours truly: <cite title='Source Title'><%= blog.user %></cite></footer>
                  </blockquote>
                  <% }) %>
                </div>
                <!-- body end -->
              </div>
            <!-- CARD ITEMs END -->
            </div>
            <!-- CARD ITEMs START: -->
            <!-- Responsive to small devices - screen width equal to or greater than 576px  -->
            <div class ='col-sm-6'
              <div class='card'> <% blogs.forEach(blog => { %>
                <!-- CARD img -->
                <div class ='position-relative'>
                  <img class='card-img' src='https://images.unsplash.com/photo-1493612276216-ee3925520721?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8cmFuZG9tfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&w=1000&q=80' alt='Card Image'/>
                    <!-- CARD body -->
                    <!-- padded section within a card: padding-horizontal at 0 & padding-top set at 1.0rem  -->
                  <div class='card-body px-0 pt-3'>
                    <!-- no underline link.. font weight-bold -->
                    <h4><a href='/blog/<%= blog._id %>' class='text-decoration-none btn-link fw-bold'> <%= blog.header %> </a></h4>
                    <form action="/blog/<%=blog._id%>/like?_method=PUT" method="post">
                      <input type="hidden" name="likes" value="<%=blog.likes%>">
                      <input type="submit" id='like-btn' value="Like"> : <%=blog.likes%>
                    </form>
                    <p class='card-text'> <%= blog.description %> </p>
                    <!-- CARD info -->
                    <blockquote class='blockquote text-right'>
                      <footer class='blockquote-footer'> yours truly: <cite title='Source Title'><%= blog.user %></cite></footer>
                    </blockquote>
                    <% }) %>
                  </div>
                  <!-- body end -->
                </div>
              <!-- CARD ITEMs END -->
              </div>
            </div>
          </div>
          <!-- SIDEBAR START: -->
          <!-- NOTES ADD -->
          <div class ='col-lg-3 mt-5 mt-lg-0'>
            <!-- NOTES ADD -->
            <div data-sticky data-margin-top='80' data-sticky-for='767'>
            </div>
            <div>
              <!-- NOTES ADD -->
            <h4 class='mt-4 mb-3'>Trending Topics</h4>
              <% for(let i=0; i<topics.length; i++) {%>
              <p>  topics[i].name </p>
                <% } %>
            </div>
            <!-- NOTES ADD -->
            <div class='text-center mt-3'><a href='/topics'>View All</a></div>
          </div>
        </div>
      </div>
    </div>
  <!-- Row end -->
  </div>
</section>

