<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- LINKS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link type='text/css' href="/style.css" rel="stylesheet"/>

  <title>Blog</title>
</head>
<body>
<!-- NAVIGATION -->
  <nav class='navbar-light' id='mainNav'>
    <ul class='nav nav-tabs'>
      <li class='nav-item'>
        <a class='nav-link' href='/'>home</a>
      </li>
      <li class='nav-item'>
        <a class='nav-link' href="/topics">topics</a>
      </li>
      <li class='nav-item'>
        <a class='nav-link active' href='/blog'>blog</a>
      </li>
      <li class='nav-item'>
        <a class='nav-link' href='/aboutMe'>about</a>
      </li>
      <li class='nav-item'>
        <a class='nav-link' href='/user'>login in</a>
      </li>
    </ul>
  </nav>
<!-- Temporary-->
  <div>
    <ul class='nav nav-pills'>
      <li class='nav-item'>
        <a class='nav-link' href='/blog/new'>create</a>
      </li>
    </ul>
  </div>
<!-- CONTENT -->
<article class="">
  <div class='container'>
    <div class='row justify-content-center'>
      <div class='col'>
        <% blogs.forEach(blog => { %>
        <p class='h6'> <%= blog.header %> <p>
        <p> <%= blog.description %> </p>
        <blockquote class='blockquote text-right'>
          <footer class='blockquote-footer'> yours truly: <cite title='Source Title'><%= blog.user %></cite></footer>
        </blockquote>
        <a href='/blog/<%=blog._id%>/edit'>edit</a>
        <% }) %>
      </div>
    </div>
  </div>
</article>

</body>
</html>
